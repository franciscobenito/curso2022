import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.URL;

public class ServidorTCPSimple {
	
	private static final String SALUDO = "Servidor esperando un puerto";
	private static final int TIMEOUT  = 10000 ;
	private static final int PUERTO = 6000;
	
	private static ServerSocket serverSocket;
	
	public static void main(String[] args) throws IOException{
		
		serverSocket = new ServerSocket(PUERTO);
		serverSocket.setSoTimeout(TIMEOUT);
		
		while(true) {
			try {
				Socket server = serverSocket.accept();
				System.out.println("Conexión desde: "+server.getRemoteSocketAddress());
				DataInputStream in = new DataInputStream(server.getInputStream());
				System.out.println(in.readUTF());
				DataOutputStream out = new DataOutputStream(server.getOutputStream());
				out.writeUTF("Gracias por conectarte a:" + server.getLocalAddress()+"\n");
				server.close();
				break;
			}catch(IOException e){
				e.printStackTrace();
				break;
			}
		}
		
		/*
		String url = "https:\\www.google.es\\";
		URL urlConnection = new URL(url.openConnection());
		*/
	}
}
